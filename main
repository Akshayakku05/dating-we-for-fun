        }

        h1 {
            color: #ff4081;
        }

        button {
            padding: 10px 20px;
            font-size: 16px;
            margin: 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.3s;
        }

        .yes {
            background-color: #ff4081;
            color: white;
        }

        .yes:hover {
            background-color: #ff6b9b;
        }

        .no {
            background-color: #cccccc;
            position: absolute;
        }

        #message {
            margin-top: 20px;
